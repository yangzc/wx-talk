/* components/chat-item-text/index.wxss */
.chat-item-text-left-content {
  min-height: 76rpx;
  width: fit-content;
  background-color: white;
  border-radius: 8rpx;
  position: relative;
  transform-style: preserve-3d;
  text-overflow: clip;
  word-wrap: break-word;
  max-width: 480rpx;
}

.chat-item-text-left-content::before {
  content: '';
  z-index: 1;
  position: absolute;
  width: 0px;
  height: 0px;
  border-left: 20rpx white solid;
  border-right: 20rpx transparent solid;
  border-top: 20rpx white solid;
  border-bottom: 20rpx transparent solid ;
  border-radius: 5rpx;
  top: 18rpx;
  left: 0rpx;
  transform: rotate(-45deg) translateZ(-1px);
}

.chat-item-text-right-content {
  min-height: 76rpx;
  width: fit-content;
  background-color: white;
  border-radius: 8rpx;
  position: relative;
  transform-style: preserve-3d;
  text-overflow: clip;
  word-wrap: break-word;
  max-width: 480rpx;
}

.chat-item-text-right-content::after {
  content: '';
  z-index: 1;
  position: absolute;
  width: 0px;
  height: 0px;
  border-left: 20rpx transparent solid;
  border-right: 20rpx white solid;
  border-top: 20rpx transparent solid;
  border-bottom: 20rpx white solid ;
  border-radius: 5rpx;
  top: 18rpx;
  right: 0rpx;
  transform: rotate(-45deg) translateZ(-1px);
}

.chat-item-text-text {
  font-size: 27rpx;
  color: #0e131a;
  padding: 16rpx;
}

